<h1>id: <%= @task.id %>　のタスク編集ページ</h1>
<% if @task.errors.any? %>
  <div id="error_explanation">
     <ul>
        <% @task.errors.full_messages.each do |message| %>
           <li><%= message %></li>
        <% end %>
     </ul>
  </div>
<% end %>

<%= form_for(@task) do |f| %>
   <%= f.label :status, 'ステータス' %>
   <%= f.text_field :status %>

   <%= f.label :content, 'タスク' %>
   <%= f.text_field :content %>
   
   <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>